<WorkoutSummaryContent>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: "24dp", "20dp", "24dp", "16dp"
    spacing: "16dp"

    MDLabel:
        id: content
        text: root.summary_text
        font_style: "Body"
        role: "large"
        markup: True
        size_hint_y: None
        height: self.texture_size[1]
        padding: "4dp", "0dp"
        text_size: self.width, None


<NewSetRow>:
    adaptive_height: True
    spacing: "8dp"
    padding: ("8dp", 0)

    MDLabel:
        text: root.set_number
        size_hint_x: 0.15
        halign: "center"
        valign: "center"
        bold: True

    MDTextField:
        id: weight_input
        text: root.weight
        input_filter: "float"
        MDTextFieldHintText:
            text: "Вес"

    MDTextField:
        id: reps_input
        text: root.reps
        input_filter: "int"
        MDTextFieldHintText:
            text: "Повт."

    MDButton:
        on_release: root.panel_ref.remove_set_row(root)
        pos_hint: {"center_y": 0.5}
        MDButtonIcon:
            icon: "trash-can-outline"

<ExpansionPanelItem>:

    MDExpansionPanelHeader:
        MDListItem:
            ripple_effect: False

            MDListItemHeadlineText:
                text: root.exercise_name

            MDListItemSupportingText:
                text: root.target_info
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                shorten: False
                shorten_from: "right"

            MDListItemTertiaryText:
                text: root.last_workout_info
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                shorten: False
                shorten_from: "right"

            TrailingPressedIconButton:
                id: chevron
                icon: "chevron-right"
                on_release: app.tap_expansion_chevron(root, self)

    
    MDExpansionPanelContent:
        orientation: 'vertical'
        adaptive_height: True
        
        MDBoxLayout:
            id: new_sets_container
            orientation: 'vertical'
            adaptive_height: True
            spacing: "4dp"
            padding: "8dp"
            
        MDButton:
            on_release: root.add_set_row()
            pos_hint: {'center_x': 0.5}
            style: "filled"

            MDButtonText:
                text: "Добавить подход"


<WorkoutScreen>:
    name: 'workout'
    

    MDBoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: "Тренировка"
            halign: "center"
            font_style: 'Title'
            adaptive_height: True
        
        ScrollView:
            size_hint_y: 0.9
            
            MDList:
                id: today_workout_container
                adaptive_height: True
                padding: "8dp"
                spacing: "8dp"

        MDButton:
            id: save_workout_btn
            on_release: root.show_save_confirmation_dialog()
            pos_hint: {'center_x': 0.5}
            size_hint: (0.8, None)
            height: "48dp"
            style: "filled"
            
            MDButtonText:
                text: "Сохранить тренировку"

