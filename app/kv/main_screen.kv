#:include app/kv/history_screen.kv
#:include app/kv/programs_screen.kv
#:include app/kv/workout_screen.kv
#:include app/kv/program_detail_screen.kv
#:include app/kv/components.kv
#:include app/kv/graph_screen.kv


<BaseMDNavigationItem>:
    MDNavigationItemIcon:
        icon: root.icon
    MDNavigationItemLabel:
        text: root.text

MDScreen:
    name: "MainScreen"
    md_bg_color: app.theme_cls.surfaceColor

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: self.theme_cls.backgroundColor

        SettingsTopAppBar:

        MDScreenManager:
            id: screen_manager

            WorkoutScreen:
                name: "workout_screen"
            
            ProgramsScreen:
                name: "programs_screen"

            HistoryScreen:
                name: "history_screen"
            
            ProgramDetailScreen:
                name: 'program_detail'
            
            GraphScreen:
                name: 'graph_screen'


        MDNavigationBar:
            id: nav_bar
            on_switch_tabs: app.on_switch_tabs(*args)

            BaseMDNavigationItem:
                name: 'workout_screen'
                text: 'Тренировка'
                icon: 'weight-lifter'

            BaseMDNavigationItem:
                name: 'programs_screen'
                text: 'Программы'
                icon: 'format-list-bulleted'
                active: True

            BaseMDNavigationItem:
                name: 'history_screen'
                text: 'История'
                icon: 'history'

            BaseMDNavigationItem:
                name: 'graph_screen'
                text: 'Графики'
                icon: 'chart-line'