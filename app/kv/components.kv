<Placeholder@MDBoxLayout>:
    orientation: 'vertical'
    adaptive_height: True
    padding: '40dp', '20dp'
    spacing: '20dp'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    opacity: 0
    
    Image:
        source: 'app/assets/images/empty.png'
        pos_hint: {'center_x': 0.5}
        size_hint_y: None
        height: '80dp'
        
    MDLabel:
        text: 'здесь пока ничего нет'
        italic: True
        halign: 'center'
        theme_text_color: "Secondary"


<SettingsTopAppBar@MDBoxLayout>:
    orientation: 'vertical'
    adaptive_height: True

    MDTopAppBar:
        id: top_app_bar
        type: "small"

        MDTopAppBarTrailingButtonContainer:
            MDActionTopAppBarButton:
                id: settings_button
                icon: "cog-outline"
                on_release: root.open_settings_menu(self)
