<GraphScreen>:
    name: 'graph_screen'
    on_enter: if root.selected_exercise_id: root.render_graph()

    MDBoxLayout:
        orientation: 'vertical'
        padding: "10dp"
        spacing: "10dp"

        MDLabel:
            text: "Прогресс"
            halign: "center"
            font_style: 'Title'
            adaptive_height: True

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            adaptive_width: True
            pos_hint: {'center_x': 0.5}
            spacing: "10dp"

            MDButton:
                id: program_dropdown_button
                on_release: if root.program_menu: root.program_menu.open()
                MDButtonText:
                    text: root.program_button_text
                
            MDButton:
                id: exercise_dropdown_button
                on_release: if root.exercise_menu: root.exercise_menu.open()
                disabled: not root.selected_program_id
                MDButtonText:
                    text: root.exercise_button_text
        MDLabel:
            id: selected_point_label
            text: "Выберите программу и упражнение, чтобы отследить прогресс"
            halign: 'center'
            font_style: 'Body'
            size_hint_y: None
            height: self.texture_size[1]
            padding: ("10dp", "10dp")

        MDBoxLayout:
            id: graph_container
